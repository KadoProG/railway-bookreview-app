{
  "extends": ["plugin:react/recommended", "react-app", "react-app/jest"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["react"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 13
  },

  "rules": {
    "no-console": "warn",
    "no-unused-vars": "off",
    "no-undef": "off",
    "@typescript-eslint/no-unused-vars": ["warn"],
    "react/react-in-jsx-scope": "off"
  },

  // 「Parsing error: Unexpected token」対策
  "parser": "@typescript-eslint/parser"
}
